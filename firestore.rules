rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write only their own trackers
    match /trackers/{trackerId} {
      // Allow creation if authenticated and user_id matches their UID
      allow create: if request.auth != null && request.resource.data.user_id == request.auth.uid;
      
      // Allow read, update, delete if authenticated and the document belongs to them
      allow read, update, delete: if request.auth != null && resource.data.user_id == request.auth.uid;
    }
  }
}
